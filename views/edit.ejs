<%- include("partials/header") %>

<div class="container mt-5">
  <h2 class="mb-4">Edit Book</h2>
  <form action="/edit/<%= book.id %>" method="POST">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" class="form-control" name="title" value="<%= book.title %>" required />
    </div>
    <div class="mb-3">
      <label for="author" class="form-label">Author</label>
      <input type="text" class="form-control" name="author" value="<%= book.author %>" />
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label">Rating (0â€“10)</label>
      <input type="number" class="form-control" name="rating" min="0" max="10" value="<%= book.rating %>" />
    </div>
    <div class="mb-3">
      <label for="read_date" class="form-label">Date Read</label>
      <input type="date" class="form-control" name="read_date" value="<%= book.read_date.toISOString().split('T')[0] %>" />
    </div>
    <div class="mb-3">
      <label for="isbn" class="form-label">ISBN</label>
      <input type="text" class="form-control" name="isbn" value="<%= book.isbn %>" />
    </div>
    <div class="mb-3">
      <label for="notes" class="form-label">Notes</label>
      <textarea class="form-control" name="notes" rows="4"><%= book.notes %></textarea>
    </div>
    <button type="submit" class="btn btn-success">Update Book</button>
  </form>
</div>

<%- include("partials/footer") %>
