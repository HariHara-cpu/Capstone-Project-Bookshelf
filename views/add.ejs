<%- include("partials/header") %>

<div class="container mt-5">
  <h2 class="mb-4">Add a New Book</h2>
  <form action="/add" method="POST">
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" class="form-control" name="title" required />
    </div>
    <div class="mb-3">
      <label for="author" class="form-label">Author</label>
      <input type="text" class="form-control" name="author" />
    </div>
    <div class="mb-3">
      <label for="rating" class="form-label">Rating (0â€“10)</label>
      <input type="number" class="form-control" name="rating" min="0" max="10" />
    </div>
    <div class="mb-3">
      <label for="read_date" class="form-label">Date Read</label>
      <input type="date" class="form-control" name="read_date" />
    </div>
    <div class="mb-3">
      <label for="isbn" class="form-label">ISBN</label>
      <input type="text" class="form-control" name="isbn" />
    </div>
    <div class="mb-3">
      <label for="notes" class="form-label">Notes</label>
      <textarea class="form-control" name="notes" rows="4"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Add Book</button>
  </form>
</div>

<%- include("partials/footer") %>
